<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.programmerbaper.skripsi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_pedagang"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pedagang"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.CuacaActivity"
            android:parentActivityName=".activities.DagangActivity"/>
        <activity android:name=".activities.LoginActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.DagangActivity"
            android:label="@string/title_activity_dagang" />
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.programmerbaper.skripsi.services.TrackingService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>